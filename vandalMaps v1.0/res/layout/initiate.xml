<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="6"
    >

	<LinearLayout xmlns:andoid="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="2">
			<TextView  
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content" 
		    	android:background="@drawable/logo"
				android:gravity="center"
	   		 />

	</LinearLayout>
	<LinearLayout xmlns:andoid="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1.8"
		android:gravity="center_horizontal"
		>
        	<Button xmlns:andoid="http://schemas.android.com/apk/res/android"
    			android:id="@+id/ListButton"
   				android:layout_width="180dp"
        		android:layout_height="50px"
        		android:text="Select Locations"
        		android:gravity="center"
        		android:textSize="20dp"
        		android:background="@drawable/custom_button"
        		/>
    		<Button xmlns:andoid="http://schemas.android.com/apk/res/android"
    			android:id="@+id/MapButton"
   				android:layout_width="180dp"
   				android:text="View Map"
        		android:layout_height="wrap_content"
        		android:gravity="center"
        		android:textSize="20dp"
        		android:background="@drawable/custom_button"
        		/>    
        	<Button xmlns:andoid="http://schemas.android.com/apk/res/android"
    			android:id="@+id/AboutButton"
   				android:text="\?"
   				android:layout_width="110px"
            	android:textSize="15dp"
        		android:layout_height="50px"
        		android:gravity="center"
        		android:background="@drawable/custom_button"
        		/>
	</LinearLayout>
	<LinearLayout xmlns:andoid="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="2"
		android:gravity="center_horizontal"
		>
    		<TextView  
    			android:layout_width="fill_parent" 
    			android:layout_height="161px" 
    			android:background="@drawable/skyline_bottom"
				android:gravity="center"
    		/>  	
	</LinearLayout>
</LinearLayout>
